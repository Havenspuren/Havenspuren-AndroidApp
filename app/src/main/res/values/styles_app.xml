        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>


        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorOnSurface">@color/onSurface</item>


        <item name="android:listDivider">@color/onPrimary</item>

        &lt;!&ndash; navigation icon color &ndash;&gt;
        <item name="colorControlNormal">?attr/colorOnSecondary</item>
        <item name="navigationViewStyle">@style/NavigationMenu</item>

        <item name="iconTint">@color/onPrimary</item>
