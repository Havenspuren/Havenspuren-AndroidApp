<resources>




    <style name="ActionBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textStyle">normal</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="ActionBarTheme.TextExpanded">
<!--        <item name="android:textSize">24sp</item>-->
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#0000</item>
    </style>

    <style name="ActionBarTheme.TextCollapsed">
<!--        <item name="android:textSize">20sp</item>-->
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>





    <style name="DottedLineOnSurface">
        <item name="dotsColor">?attr/colorPrimary</item>
        <item name="dotsSize">@dimen/dots_size</item>
        <item name="marginDots">@dimen/dots_space</item>
        <item name="direction">vertical</item>
    </style>
</resources>
