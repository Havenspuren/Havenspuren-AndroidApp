<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Buttons -->
    <style name="OnPrimaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="OnPrimaryOutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!-- Check Box -->
    <style name="DefaultCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/bree_serif_regular</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="OnPrimaryCheckBox" parent="DefaultCheckBox">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.App.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>
</resources>