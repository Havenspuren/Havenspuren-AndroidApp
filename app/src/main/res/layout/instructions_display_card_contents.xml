<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/ThemeOverlay.App.Typography">

    <ImageView
        android:id="@+id/instruction_display_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_north"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/instruction_display_title"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/instruction_display_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:maxLines="1"
        android:text="@string/dummy"
        android:textAppearance="?attr/textAppearanceHeadline4"
        android:layout_marginStart="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/instruction_display_image"
        app:layout_constraintTop_toTopOf="@id/instruction_display_image" />

    <TextView
        android:id="@+id/instruction_display_distance_instruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dummy"
        android:maxLines="1"
        android:lines="1"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceHeadline5"
        app:layout_constraintEnd_toEndOf="@id/instruction_display_image"
        app:layout_constraintStart_toStartOf="@id/instruction_display_image"
        app:layout_constraintTop_toBottomOf="@id/instruction_display_image" />



    <TextView
        android:id="@+id/instruction_display_whole_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dummy"
        android:maxLines="1"
        android:lines="1"
        android:textAlignment="viewEnd"
        android:textAppearance="?attr/textAppearanceHeadline5"
        app:layout_constraintTop_toBottomOf="@id/instruction_display_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/instruction_display_distance_instruction" />
</androidx.constraintlayout.widget.ConstraintLayout>