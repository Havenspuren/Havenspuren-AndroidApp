<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout.fragments.bottom_sheet.LongPoiInfo">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="20dp"
        app:cardCornerRadius="20dp"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:text="Titel"
                android:textAppearance="?attr/textAppearanceHeadline4" />

            <com.stfalcon.chatkit.messages.MessagesList
                android:id="@+id/long_poi_info_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:incomingDefaultBubbleColor="?attr/colorPrimary"
                app:incomingDefaultBubblePressedColor="?attr/colorPrimary"
                app:incomingDefaultBubbleSelectedColor="?attr/colorPrimary"
                app:incomingTextColor="?attr/colorOnPrimary"
                app:outcomingDefaultBubbleColor="?attr/colorSecondary"
                app:outcomingDefaultBubblePressedColor="?attr/colorSecondary"
                app:outcomingDefaultBubbleSelectedColor="@color/colorSecondary"
                app:outcomingTextColor="?attr/colorOnSecondary"
                app:dateHeaderFormat=""/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>